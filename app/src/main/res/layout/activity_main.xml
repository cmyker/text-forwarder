<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current target package:" />

    <TextView
        android:id="@+id/target_package_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="not set" />

    <Button
        android:id="@+id/clear_target_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear remembered app" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Minimal utility that appears in the Android Share menu as a TFW shortcut.\nUse it to quickly forward text to a preselected app (e.g., a dictionary) that doesnâ€™t show up in the Share menu. It remembers your choice for next time." />

</LinearLayout>
